<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/studentDashboards.css" />

    <title>Student Dashboard</title>
  </head>
  <body>
    <!-- Image and text -->

    <h1>hello <span>" <%= user.username%> <%= user.lastName%> "</span></h1>
    <div class="header">
      <h1>your credentials</h1>
    </div>
    <div class="main">
      <div class="card">
        <img
          class="card-img-top"
          src="/images/uploads/<%=user.file%>"
          alt="Card image cap"
        />
        <div class="card-body">
          <div class="cred">
            <p class="label">full name</p>
            <h5 class="card-title"><%= user.username%> <%= user.lastName%></h5>
          </div>
          <div class="cred">
            <p class="label">id</p>
            <h5 class="card-title"><%= user.id%></h5>
          </div>
          <div class="cred">
            <p class="label">contact no</p>
            <h5 class="card-title"><%= user.phoneNumber%></h5>
          </div>
          <div class="cred">
            <p class="label">Email</p>
            <h5 class="card-title"><%= user.email%></h5>
          </div>
          <div class="cred">
            <p class="label">course</p>
            <h5 class="card-title"><%= user.course%></h5>
          </div>

          <button type="button" class="btn btn-success">
            <a href="/checkIn">check In</a>
          </button>
          <button type="button" class="btn btn-danger">
            <a href="/logout">Logout</a>
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Attendance History</h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= user.username%> <%= user.lastName%>
          </h6>
          <% if(user.attendance.length > 0) {%> <%
          user.attendance.forEach(function(elem){ %>
          <ul class="attendanceList">
            <li>Date: <%=elem.date %></li>
            <li>Time: <%=elem.timestamp %></li>
            <li>Status: <%=elem.attendanceStatus %></li>
          </ul>
          <% }) %> <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
